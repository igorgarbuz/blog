---
interface Props {
    body: string
    href: string
    title: string
}

const { href, title, body } = Astro.props
---

<li class="link-card">
    <a href={href}>
        <h2>
            {title}
            <span>&rarr;</span>
        </h2>
        <p>
            {body}
        </p>
    </a>
</li>
