---
import { SITE } from "@config"
import MenuButton from "@components/MenuButton.astro"
import ThemeSwitch from "@components/ThemeSwitch.astro"
import HeaderLink from "@components/HeaderLink.astro"

const props = Astro.props
---

<header {...props}>
    <nav>
        <a href="/" id="site-title">
            {SITE.title}
        </a>
        <div id="nav-links-container">
            <ul id="nav-links">
                <li>
                    <HeaderLink href="/rss.xml"> RSS </HeaderLink>
                </li>
                <li>
                    <HeaderLink href="/about"> About </HeaderLink>
                </li>
                <li>
                    <ThemeSwitch />
                </li>
            </ul>
        </div>
        <MenuButton />
    </nav>
</header>

<style>
    nav {
        display: flex;
        flex-direction: row;
        font-weight: 700;
        justify-content: space-between;
        padding: var(--spacing-16);
        z-index: 1000;
    }

    #site-title {
        font-size: var(--font-24);
    }

    a {
        display: inline-block;
        margin: calc(-1 * var(--spacing-2));
        padding: var(--spacing-2);
        text-decoration: none;
    }

    a:hover {
        color: inherit;
    }

    #nav-links {
        align-items: center;
        display: flex;
        flex-direction: column;
        list-style: none;
        margin: var(--spacing-24) 0 0;
        overflow: hidden;
        padding: 0;
        position: relative;
    }

    /* needed as parent grid container to enable slide-down animation on mobile */
    #nav-links-container {
        display: grid;
        grid-template-rows: 0fr;
        margin-right: var(--spacing-24);
        transition: grid-template-rows 0.3s ease-out;
    }

    #nav-links-container.expanded {
        grid-template-rows: 1fr;
    }

    li {
        padding: var(--spacing-8);
    }

    #menu-button {
        margin-top: var(--spacing-8);
    }

    /* Mobile first-class citizen, below styles for the desktop. 860px to cover larger tablets */
    @media (width >= 860px) {
        header {
            margin-bottom: var(--spacing-16);
        }

        .nav-container {
            align-items: center;
        }

        #nav-links {
            flex-direction: row;
            margin: 0;
        }

        #nav-links-container {
            display: block;
            margin-right: 0;
            transition: none;
        }

        #menu-button {
            display: none;
        }

        li {
            padding: 0 var(--spacing-16);
        }

        li:last-child {
            padding-right: 0;
        }
    }
</style>

<script>
    document.addEventListener("astro:page-load", () => {
        const menuButton = document.getElementById("menu-button")
        const navLinks = document.getElementById("nav-links-container")
        if (menuButton && navLinks) {
            menuButton.addEventListener("click", () => {
                navLinks.classList.toggle("expanded")
                menuButton.classList.toggle("change")
            })
        }
    })
</script>
