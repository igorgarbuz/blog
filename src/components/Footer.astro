---
import RssLink from "./RssLink.astro"

const props = Astro.props
---

<footer {...props}>
    <em>"if you can dream — and not make dreams your master"</em> • <RssLink className="rss-link" />
</footer>

<style>
    footer {
        color: var(--color-txt-secondary);
        padding-block: var(--spacing-24);
        text-align: center;
    }

    .rss-link {
        height: var(--font-18);
    }
</style>
