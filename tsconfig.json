{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "src",
        "checkJs": true,
        "esModuleInterop": true,
        "exclude": [
            "dist",
            "node_modules"
        ],
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "@assets/*": [
                "assets/*"
            ],
            "@config": [
                "config.ts"
            ],
            "@components/*": [
                "components/*"
            ],
            "@content/*": [
                "content/*"
            ],
            "@layouts/*": [
                "layouts/*"
            ],
            "@types": [
                "types.ts"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@styles/*": [
                "styles/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
        },
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
    },
}
