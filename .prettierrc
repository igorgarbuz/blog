{
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "jsxSingleQuote": false,
    "overrides": [
        {
            "files": "*.astro",
            "options": {
                "parser": "astro"
            }
        },
        {
            "files": "*.{yml,yaml}",
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "plugins": [
        "prettier-plugin-astro"
    ],
    "printWidth": 100,
    "semi": false,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "es5"
}
